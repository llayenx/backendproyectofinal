    },
    "components": {
        "schemas": {
            "login": {
                "description": "La contraseña debe tener al menos 7 ",
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "nicolas"
                    },
                    "email": {
                        "type": "string",
                        "example": "nicolasconti@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "123456"
                    },
                    "avatar": {
                        "type": "string",
                        "example": "hombre grande"
                    }
                }
            },
            "updateUser": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "nicolas"
                    },
                    "avatar": {
                        "type": "string",
                        "example": "hombre programador"
                    }
                }
            },
            "createProduct": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "iphone-14"
                    },
                    "description": {
                        "type": "string",
                        "example": "Ultimo modelo"
                    },
                    "price": {
                        "type": "integer",
                        "example": 1000
                    },
                    "availableQty": {
                        "type": "string",
                        "example": "10"
                    },
                    "status": {
                        "type": "string",
                        "example": "disponible"
                    },
                    "userId": {
                        "type": "integer",
                        "example": 1
                    },
                    "productImage": {
                        "type": "string",
                        "example": "photo-iphone"
                    }
                }
            },
            "updateProduct": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string",
                        "example": "Ultimo modelo"
                    }
                }
            },
            "createProductInOrder": {
                "type": "object",
                "properties": {
                    "orderId": {
                        "type": "integer",
                        "example": 1
                    },
                    "productId": {
                        "type": "integer",
                        "example": 2
                    },
                    "quantity": {
                        "type": "integer",
                        "example": 1
                    },
                    "price": {
                        "type": "integer",
                        "example": 2000
                    },
                    "status": {
                        "type": "string",
                        "example": "disponible"
                    }
                }
            },
            "createProductInCart": {
                "type": "object",
                "properties": {
                    "cartId": {
                        "type": "integer",
                        "example": 1
                    },
                    "productId": {
                        "type": "integer",
                        "example": 2
                    },
                    "quantity": {
                        "type": "integer",
                        "example": 1
                    },
                    "price": {
                        "type": "integer",
                        "example": 5000
                    },
                    "status": {
                        "type": "string",
                        "example": "no-pagado"
                    }
                }
            },
            "createOrder": {
                "type": "object",
                "properties": {
                    "totalPrice": {
                        "type": "integer",
                        "example": 5000
                    },
                    "userId": {
                        "type": "integer",
                        "example": 2
                    }
                }
            },
            "createCart": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "integer",
                        "example": 1
                    },
                    "totalPrice": {
                        "type": "integer",
                        "example": 5000
                    }
                }
            }
        }
    }
}